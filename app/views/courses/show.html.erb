<html>
<body>
<div class="container">
	<div class="hero-unit">
		<p id="notice"><%= notice %></p>
		<h1>
		  <%= @course.title %>
		</h1>

		<h3>
		  <strong>Instructor:</strong>
		  <%= @course.user.name %>
		</h3>

		<p>
		 	<%= link_to 'Show Lectures', lectures_path(@course) ,:class => 'btn btn-default btn-large' %>
		</p>

		<% if @course.user.id == current_user.id  %>
			<%= link_to 'Edit', edit_course_path(@course) %> |
		<%end%>
		<%= link_to 'Back', root_url %>
	</div>
</div>
</body>
</html>